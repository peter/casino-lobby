{
  "name": "casino-lobby-api",
  "version": "0.0.1",
  "description": "REST API for the Casino Lobby Web UI",
  "main": "index.js",
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "start": "NODE_PATH=. node index.js",
    "dev": "NODE_PATH=. $(yarn bin)/nodemon index.js",
    "lint": "$(yarn bin)/eslint *.js",
    "test:unit": "jest --testMatch '**app/**.test.js'",
    "test:unit:watch": "yarn test:unit --watchAll",
    "test:api": "$(yarn bin)/jest --testMatch '**test/api/suites/*.test.js'",
    "test": "yarn lint && yarn test:unit && yarn test:api"
  },
  "author": "Peter Marklund",
  "license": "MIT",
  "dependencies": {
    "ajv": "6.5.5",
    "axios": "0.18.0",
    "express": "4.16.4",
    "ramda": "0.26.0"
  },
  "devDependencies": {
    "eslint": "5.9.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "jest": "23.6.0",
    "nodemon": "1.18.6"
  }
}
